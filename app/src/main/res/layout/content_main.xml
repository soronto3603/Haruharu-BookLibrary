<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
    <com.booklibrary.haruharu.booklibrary.CustomViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/btn_home"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_home"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#FFCCCCCC"
        android:gravity="center"
        android:text="홈"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/btn_mylib"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#FFCCCCCC"
        android:gravity="center"
        android:text="서재"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_home"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/btn_recommendation"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#FFCCCCCC"
        android:gravity="center"
        android:text="책 추천"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_mylib"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/btn_my_info"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#FFCCCCCC"
        android:gravity="center"
        android:text="내 정보"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_recommendation"
        app:layout_constraintWidth_percent="0.25" />


</android.support.constraint.ConstraintLayout>