<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/book_lib_image"
        android:layout_width="wrap_content"
        android:minWidth="20dp"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:background="#666666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/book_lib_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/book_lib_image"
        app:layout_constraintTop_toTopOf="@id/book_lib_image"/>
    <TextView
        android:id="@+id/book_lib_gage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#aaaaaa"
        app:layout_constraintTop_toBottomOf="@id/book_lib_title"
        app:layout_constraintLeft_toLeftOf="@id/book_lib_title"/>
    <TextView
        android:id="@+id/book_lib_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/book_lib_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#ffffff"
        android:text="자세히"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/book_lib_del_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#ffffff"
        android:text="삭제하기"
        app:layout_constraintRight_toLeftOf="@id/book_lib_more_btn"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>